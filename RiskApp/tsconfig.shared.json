{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.shared.tsbuildinfo",
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/shared",
    "rootDir": "./shared",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,

    /* Path mapping for shared types */
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["shared/**/*.ts"]
}
